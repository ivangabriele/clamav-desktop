{
  "name": "clamav-desktop",
  "description": "A cross-platform desktop GUI for ClamAV antivirus.",
  "license": "AGPL-3.0",
  "version": "0.3.24",
  "type": "module",
  "engines": {
    "node": "18",
    "npm": "9"
  },
  "scripts": {
    "build": "yarn clean && yarn build:webview && yarn build:core",
    "build:core": "cd ./src-tauri && cargo build",
    "build:linux:debian": "sh ./scripts/build_linux_debian.sh",
    "build:webview": "cross-env DISABLE_ESLINT_PLUGIN=true react-scripts build",
    "clean": "rm -Rf ./.e2e ./build ./node_modules/.cache ./src-tauri/target ./src-tauri/cobertura.xml",
    "dev": "cross-env RUST_BACKTRACE=full tauri dev",
    "dev:webview": "cross-env BROWSER=none DISABLE_ESLINT_PLUGIN=true react-scripts start",
    "release:bin": "tauri build -b 'none'",
    "start": "./src-tauri/target/release/clamav-desktop",
    "test": "yarn test:lint && yarn test:type && yarn test:unit:core && test:unit:webview",
    "test:e2e": "yarn release:bin && xvfb-run wdio run ./configs/wdio.config.ts",
    "test:lint": "eslint --ext js,ts,tsx .",
    "test:type": "tsc --noEmit -p ./tsconfig.ci.json",
    "test:unit:core": "cd ./src-tauri && cargo test",
    "test:unit:webview": "jest --config=./configs/jest.config.js --detectOpenHandles",
    "postversion": "git push origin HEAD --tags"
  },
  "dependencies": {
    "@singularity/core": "4.4.0",
    "@tauri-apps/api": "1.2.0",
    "ky-universal": "0.11.0",
    "lodash.debounce": "4.0.8",
    "lodash.throttle": "4.1.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hot-toast": "2.4.0",
    "react-icons": "4.8.0",
    "react-scripts": "5.0.1",
    "react-virtualized": "9.22.3",
    "styled-components": "5.3.8",
    "typescript": "4.9.5",
    "web-vitals": "3.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@ivangabriele/commitlint-config": "1.0.6",
    "@ivangabriele/eslint-config-typescript-react": "6.0.1",
    "@ivangabriele/prettier-config": "3.1.0",
    "@ivangabriele/tsconfig-react": "1.2.2",
    "@swc/core": "1.3.37",
    "@swc/jest": "0.2.24",
    "@tauri-apps/cli": "1.2.3",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.4.3",
    "@tsconfig/node18": "1.0.1",
    "@types/jest": "29.4.0",
    "@types/lodash.debounce": "4.0.7",
    "@types/node": "18.14.6",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "@types/shelljs": "0.8.11",
    "@types/styled-components": "5.1.26",
    "@typescript-eslint/eslint-plugin": "5.54.0",
    "@typescript-eslint/parser": "5.54.0",
    "@wdio/cli": "8.5.5",
    "@wdio/local-runner": "8.5.5",
    "@wdio/mocha-framework": "8.4.0",
    "@wdio/spec-reporter": "8.4.0",
    "bhala": "3.0.4",
    "cross-env": "7.0.3",
    "eslint": "8.35.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-no-null": "1.0.2",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-sort-destructure-keys": "1.5.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "eslint-plugin-typescript-sort-keys": "2.1.0",
    "esm-path": "1.0.1",
    "husky": "8.0.3",
    "jest": "29.4.3",
    "jest-environment-jsdom": "29.4.3",
    "lint-staged": "13.1.2",
