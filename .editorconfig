# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[*.{c,cpp,h,hpp}]
indent_size = 4

[*.ps1]
indent_size = 4

[*.py]
indent_size = 4

[*.rs]
indent_size = 4
max_line_length = 80

[*.xml]
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0

[Makefile]
indent_size = 8
indent_style = tab
max_line_length = 80

# Ignored files
[*.{asc,cer,crt,der,key,pem}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
